include ../base/mixins
include ../base/header
include ../base/footer
include ../base/modal

block data
block variables

doctype html
html(lang="en")
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description", content="Luxury Travel Mart - the leading luxury travel exhibition")
    //- генерируйте favicon тут - https://realfavicongenerator.net/
    //- в подключение фавикон манифеста обязательно добавьте строчки crossorigin="use-credentials"

    //- используйте только для шрифта находящегося на первом экране
    link(rel="preload", href="fonts/ProximaNova-Reg.woff2", as="font", crossorigin="anonymous")
    link(rel="preload", href="fonts/ProximaNova-Light.woff2", as="font", crossorigin="anonymous")
    link(rel="preload", href="fonts/ProximaNova-Semibold.woff2", as="font", crossorigin="anonymous")
    link(rel="preload", href="fonts/ProximaNova-Bold.woff2", as="font", crossorigin="anonymous")
    link(rel="stylesheet", href="css/style.min.css")

  body
    +sprite()
    div(class=(wrapperMod) ? "wrapper wrapper--" + wrapperMod : "wrapper")
      if (hasHeader)
        +header(headerMod, currentPage)

      if (hasTopLink)
        +renderTopLink("#", "Back")

      block main

      if (hasFooter)
        +footer(footerMod)

    block modals
      +modal("modal--forgot")
        +modal-forgot()
    if (hasUpButton)
      .hidden-sm
        +renderUpButton('up-button--fixed')
    script(src="js/vendor.min.js")
    script(src="js/main.min.js")
