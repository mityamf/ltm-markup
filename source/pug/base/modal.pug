mixin modal(mods)
  div(class="modal modal--preload " + mods)
    .modal__wrapper
      .modal__overlay
      .modal__content
        if block
          block
        button.modal__close-btn.btn-reset(type="button", aria-label="Закрыть попап")
          +icon("close", 33, 33)

mixin mobileModal(mods)
  +modal(mods + ' modal--bottom-slide')
    block

