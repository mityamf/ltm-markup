mixin renderBackButton(link)
  a.back-link(href=link)
    +icon("arrow-left-white", 12, 20)
    span Back

mixin renderHeadlineWithBackButton(title, link)
  .headline-back
    h2.title--h2=title
    +renderBackButton(link)

mixin renderTitleHeadline(title)
  .headline-back.headline-back--title
    h2.title.title--h2=title

mixin renderTitleHeadlineWithBackButton(title, link)
  .headline-back.headline-back--title
    h2.title.title--h2=title
    +renderBackButton(link)
