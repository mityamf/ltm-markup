mixin renderEditBlock(editingBlockList, buttons)
 .edit
   .edit__wrapper
     each block in editingBlockList
       if block.type === "text"
         h3.title--h3=block.title
       else
         h3(class="title--h3 title--small")=block.title
       if block.type === "text"
         .edit__text-block
           each text in block.content
             p=text
       if block.type === "input"
         label.edit__label
           input.edit__input(type="text", value=block.content)
       if block.type === "select"
         select(id="hotel-editor-select", class="input-dropdown", multiple)
           each text in block.content
             option(value=text, class="input-dropdown__option")=text

   - var buttonModClass = "edit__buttons--right"
   if buttons.leftBorder
     -var buttonModClass = "edit__buttons--left"

   .edit__buttons(class=buttonModClass)
     each button in buttons.buttonList
       button(class=button.theme + " btn " + button.mod, type=button.type)=button.text



