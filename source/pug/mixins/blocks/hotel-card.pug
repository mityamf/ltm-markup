mixin renderHotelCard(title, photoList, logo, link)
  - var mod = ["hotel-card__photo--big", "hotel-card__photo--small"]
  li.hotel-cards__hotel-card.hotel-card
    a(href=link).hotel-card__link
      .hotel-card__photos
        each photo, index in photoList
          picture(class='hotel-card__photo ' + mod[index % 2])
            +webp("content", `${photo}`)
            +img("content", `${photo}`, "jpg", 222, 154, "Фото отеля")

      .hotel-card__info
        img(src=logo, alt="Лого")
        h4.hotel-card__title=title
