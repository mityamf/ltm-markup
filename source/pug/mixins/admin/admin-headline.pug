mixin renderAdminHeadline(eventName, eventPlace, dates, backLink)
  .admin-headline
    .top-wrapper.top-wrapper--mobile
      h2.title.title--h2=eventName
      .hidden-sm
        +renderBackButton(backLink)
    span.admin-headline__place=eventPlace
    time(datetime="dates")=dates

mixin renderLKAdminHeadline(eventName, eventPlace, dates)
  .admin-headline
    h2.title--h2=eventName
    span.admin-headline__place=eventPlace
    time(datetime="dates")=dates
