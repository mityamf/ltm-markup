mixin tabsMenuButton()
  button.tabs__menu-button.visible-sm(type="button" data-modal="admin-menu")
    +icon("icon-mobile-menu", 32, 32)

mixin renderAdminTabs(tabs, modal, menu)
  - var modClass = ''
  if modal
    - var modClass = 'tabs--modal'
  if menu
    - var modClass = 'tabs--menu'

  .tabs(class=modClass)
    if menu
      +tabsMenuButton()
    ul.tabs__list
      each tab in tabs
        - var activeMod = tab.currentPage === currentPage ? "tabs__item--active" : ""
        - var href = activeMod === "tabs__item--active" ? null : tab.link

        li.tabs__item(class=activeMod)
          a.tabs__link(href=href) !{tab.text}


