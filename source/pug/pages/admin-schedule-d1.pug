extends ../base/layout

block variables
  - var title = "Schedule"
  - var hasHeader = true
  - var hasFooter = true

block main
  include ../data/admin/admin-headline
  include ../data/admin/participants
  include ../data/admin/admin-tabs
  include ../data/admin/schedule-tabs
  include ../data/admin/admin-schedule
  include ../data/admin/wish-list
  include ../data/support-contacts

  main.container.container--no-padding.container--admin
    .admin
      +renderAdminHeadline(adminHeadline.eventName, adminHeadline.eventPlace, adminHeadline.dates, adminHeadline.backLink)
      +renderParticipantList(participantsHeadline, participantsInfo, participantsList, participantsText)
      +renderAdminTabs(adminTabs)
      +renderHeadline2("My Schedule")
      +renderScheduleTabs(scheduleTabs, generatePDF)
      +renderSchedule(adminScheduleTitles, adminSchedule)
      +renderWishList(wishList)
    +renderSupportContacts(contactsList)
