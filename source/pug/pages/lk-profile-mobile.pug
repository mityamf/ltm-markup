extends ../base/layout

block variables
  - var title = "Phone LK Guest Company"
  - var hasHeader = true
  - var hasFooter = true
  - var currentPage = "Phone LK Guest Company"

block main
  include ../data/pages/lk-profile-mobile

  main.container.admin.admin--mobile
    +renderLKAdminHeadline(adminHeadline.eventName, adminHeadline.eventPlace, adminHeadline.dates, adminHeadline.backLink)
    .admin__control-wrapper
      +renderAdminTabs(adminTabs)
    .visible-sm
      +renderHeadlineBig("Adventa Agency")
    .info-block
      .info-block__top-wrapper
        .info-block__headline
          +renderHeadline2(infoBlock.title)
          a.info-block__link(href=infoBlock.link)=infoBlock.link
      .info-block__text-wrapper
        p=infoBlock.text
      button.btn.btn--blue(type=infoBlock.buttonType)=infoBlock.buttonText
    +renderSupportContacts(contactsList)

block modals
  include ../data/modal-profile
  include ../data/mobile-admin-tabs

  +mobileModal("modal--admin-menu")
    +renderModalAdminTabs(adminTabs)
  +mobileModal("modal--edit-profile")
    +modalEditProfile(editProfile)
