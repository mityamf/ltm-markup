extends ../base/layout

block variables
  - var title = "Schedule"
  - var hasHeader = true
  - var hasFooter = true
  - var currentPage = "Schedule2"

block main
  include ../data/lk/lk-admin-headline
  include ../data/lk/lk-participants
  include ../data/lk/lk-admin-tabs
  include ../data/lk/lk-schedule
  include ../data/lk/lk-wish-list
  include ../data/lk/lk-support-contacts

  main.container.container--no-padding.container--admin-deadlines.lk
    .admin.admin--schedule
      +renderLKAdminHeadline(adminHeadline.eventName, adminHeadline.eventPlace, adminHeadline.dates)
      +renderLKParticipantList(participantsHeadline, participantsInfo, participantsList, participantsText, infoBlock)
      .admin__control-wrapper
        +renderAdminTabs(adminTabs)
      +renderHeadline2("Список участников")
      +renderScheduleTabs(scheduleTabs, generatePDF)
      +renderSchedule(adminScheduleTitles, adminSchedule)
      .admin__mobile-block-wrapper
        +renderGeneratePDFButton("#", "Скачать расписание PDF")
      +renderWishList(wishList)
      .admin__mobile-block-wrapper
        +renderUpButton()
    +renderSupportContacts(contactsList)
