extends ../base/layout

block data
  include ../data/news

block variables
  - var title = "Компоненты"
  - var wrapperMod = ""
  - var hasHeader = true
  - var headerMod = ""
  - var hasFooter = true
  - var footerMod = ""
  - var currentPage = ""
  - var hasUpButton = true

block main
  style.
    main > .container {
      padding-top: 30px;
      padding-bottom: 30px;
    }

    .components-backwards {
      display: inline-block;
      margin-bottom: 10px;
      margin-left: 7px;
    }

    .components-backwards span:first-child {
      position: relative;
      top: -3px;

      display: inline-block;
      margin-right: 15px;

      font-size: 16px;
      line-height: 24px;
      vertical-align: top;

      transform: scale(2);
    }

    .components-backwards span:last-child {
      font-size: 16px;
      line-height: 24px;
    }

    .components-backwards + h1 {
      margin-bottom: 0;
    }

    .container > section {
      padding: 20px 0;
    }

  main
    .container
      a.components-backwards(href="index.html")
        span &larr;
        span вернуться на разводящую
      h1 Компоненты, используемые в вёрстке

      section
        h2 1. Блок promo

        p Используется на разных страницах
        p(style="color: red;") Кнопка регистрации скрывается заменой класса "promo__button" на "hidden"
        div
          +promo("The leading luxury travel exhibition in eastern europe, russia & cis", "Registration", "./img/bg/bg-home.png", "./img/bg/bg-home@2x.png", "1920", "534", "./img/bg/LTM_28_02_1942.png 1x, ./img/bg/LTM_28_02_1942@2x.png 2x", "promo__button", "promo__info")

      section
        h2 2. Блок направлений

        p Используется на разных страницах
        p(style="color: red;")
        div.direction.container.swiper-container.mySwiper
          ul.direction__list.swiper-wrapper
            +direction("Luxury Travel Mart Kyiv 2019 at the Intercontinental Kyiv, Ukraine", "24 September 2019", "Registration ending soon", "24.09.2019", "direction__status--ending")
            +direction("Luxury Travel Mart Almaty 2019 at The Ritz-Carlton, Almaty, Kazakhstan", "27 September 2019", "Available", "27.09.2019", "direction__status--available")
            +direction("Luxury Travel Mart Moscow 2019 at The Ritz-Carlton, Moscow, Russia", "1 October 2019", "Available", "01.10.2019", "direction__status--available")
            +direction("Luxury Travel Mart Moscow 2020 at Hyatt Regency Moscow, Russia", "27–28 February 2020", "Available", "27.02.2020", "direction__status--available")
            +direction("Luxury Travel Mart Almaty Spring 2020 at The Ritz-Carlton, Almaty, Kazakhstan", "3 March 2020", "Waiting list", "03.03.2020", "direction__status--waiting")
            +direction("Luxury Travel Mart Exchange Grand Hotel Europe, Saint-Petersburg, Russia", "20 June 2020", "Waiting list", "20.06.2020", "direction__status--waiting")
          .direction__arrow.swiper-button-next.direction__arrow--right
            +icon("arrow-right", "11", "19")
          .direction__arrow.swiper-button-prev.direction__arrow--left
            +icon("arrow-left", "11", "19")

      section
        h2 3. Кнопка перехода в блок

        p Используется на разных страницах
        p(style="color: red;")
        div
          a.button.button--open(href="#")
            +icon("icon-arrow", 20, 14)
            span.visually-hidden Open Block

      section
        h2 4. Блок новостей

        p Используется на разных страницах
        p(style="color: red;")
        li.news-home__info-item.swiper-slide
          .news-home__info-img
            +img("content", "drawbridge", "jpg", "222", "222", "sorasak")
          .news-home__info-content
            time.news-home__info-date(datetime="2019-04-18") 18 April 2
            h3.news-home__title-info LTM Anniversary Exhibition
            .news-home__info-text
              p The partner country of the 15th anniversary exhibition of the Luxury Travel Mart, which will take place in the Hyatt Regency Petrovsky Park from February 28 to March 1, 2019, will be Japan, establishing a new tradition. Represented for the first time at LTM last year, Japan quickly became one of the main players in the exhibition. The Japanese exhibit, which included 14 companies…
            .news-home__btn-block
              a.button.button--open(href="#")
                +icon("icon-arrow", 20, 14)
                span.visually-hidden Open Block
