extends ../base/layout

block data
  include ../data/photos
  include ../data/video

block variables
  - var title = "Галерея"
  - var wrapperMod = ""
  - var hasHeader = true
  - var headerMod = ""
  - var hasFooter = true
  - var footerMod = ""
  - var currentPage = "Gallery"
  -
    var promoBg = {
      titleItem: "The leading luxury travel exhibition in eastern europe, russia AND cis",
      imgItem: "img/bg/bg-gallery-desktop.png",
      img2xItem: "img/bg/bg-gallery-desktop@2x.png",
      widthItem: "1920",
      heightItem: "534",
      imgSource: "img/bg/bg-gallery-mobile.png 1x, img/bg/bg-gallery-mobile@2x.png 2x",
      classItem: "promo__reg",
      promoItem: "promo__info promo__text-wrapper",
      noButtonMod: true
    }

block main

  main
    +promo(promoBg.titleItem, null, promoBg.imgItem, promoBg.img2xItem, promoBg.widthItem, promoBg.heightItem, promoBg.imgSource, promoBg.classItem, promoBg.promoItem, promoBg.noButtonMod)
    section.gallery.container.container--no-padding
      h1.visually-hidden Фото и видео
      .toggle.toggle__container
        span.toggle__photo Photo
        input(type="checkbox" id="toggle-button" class="toggle__button")
        label(for="toggle-button" class="visually-hidden") Toggle Button
        span.toggle__video Video
      .gallery__section.gallery__section--photo.photo
        h2.title.title--h2.title--sm-pd  Photo
        +photo-block
      .gallery__section.gallery__section--video.video
        h2.title.title--h2.title--sm-pd Video
        ul.video__block-list
          each videoItem in videoList
            li.video__block-item
              .video__title-wrap
                h3.title.title--h3 #{videoItem.title} #[span #{videoItem.titleOnlyDesktop}]
              .video__container
                video.video__player(controls preload="metadata" poster= `${videoItem.img}` src= `${videoItem.src}`)
