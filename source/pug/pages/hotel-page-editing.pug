extends ../base/layout

block variables
  - var title = "LK Exhibitor Edit Company Info"
  - var hasHeader = true
  - var hasFooter = true

block main
  include ../data/pages/hotel-page-editing

  main.container
    .hotel-page.hotel-page--headline-wrapper
      +renderEditHeadline(hotelHeadline.title, hotelHeadline.logo, hotelHeadline.logoWidth, hotelHeadline.logoHeight, "#")
      +renderHotelHeadline(hotelHeadline.title, hotelHeadline.logo, hotelHeadline.note, hotelHeadline.logoWidth, hotelHeadline.logoHeight)
      .visible-sm
        +renderHeadlineWithBackButton(pageTitle, "#")
      .visible-sm.no-padding
        +renderEditImageSlider(hotelPhotos.photoList)
      .hidden-sm
        +renderEditPhotos(hotelPhotos.photoList, hotelPhotos.cover)
      +renderEditBlock(editingBlockList, buttons, editingBlockStatus)

