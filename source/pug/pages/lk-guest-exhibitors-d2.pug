extends ../base/layout

block variables
  - var title = "Hosted Buyers Guest List"
  - var hasHeader = true
  - var hasFooter = true

block main
  include ../data/lk/lk-admin-headline
  include ../data/lk/lk-participants
  include ../data/lk/lk-admin-tabs
  include ../data/lk/lk-guests-filters
  include ../data/lk/lk-filter-tabs
  include ../data/lk/lk-hosted-guests-list
  include ../data/lk/lk-support-contacts

  main.container.container--no-padding.lk
    .admin
      +renderLKAdminHeadline(adminHeadline.eventName, adminHeadline.eventPlace, adminHeadline.dates)
      +renderLKParticipantList(participantsHeadline, participantsInfo, participantsList, participantsText, infoBlock)
      .admin__control-wrapper
        +renderAdminTabs(adminTabs)
      +renderHeadline2("Список участников")
      +renderScheduleTabs(scheduleTabs)
      //ul.hotel-filters
      //  each filter in filters
      //    +renderFilter(filter.title, filter.mod, filter.filterList)
      +renderFilterTabs(filterTabs)
      +renderHostedGuestsList(adminHostedGuestsListTitles, adminHostedGuestsList)
      button.btn.btn--white.btn--more(type="button")="Показать больше"
    +renderSupportContacts(contactsList)
