extends ../base/layout

block variables
  - var title = "Deadline Info"
  - var hasHeader = true
  - var hasFooter = true


block main
  include ../data/admin/admin-tabs
  include ../data/admin/sponsorship
  include ../data/admin/download-list
  include ../data/admin/participants
  include ../data/admin/deadlines-info
  include ../data/admin/admin-headline
  include ../data/admin/admin-mail-control

  main.container
    +renderAdminHeadline(adminHeadline.eventName, adminHeadline.eventPlace, adminHeadline.dates, adminHeadline.backLink)
    +renderMailControl(adminMailControl.title, adminMailControl.linkList, adminMailControl.isSearchInput)
    p="Здесь пока будут отображаться отдельные куски из разных страниц админки, потом разнесу по разным страницам, сейчас надо сделать шаблоны"
    p="Табы"
    +renderAdminTabs(adminTabs)

    p="Сотрудники на выставку"
    +renderParticipantList(participantsHeadline, participantsInfo, participantsList, participantsText)

    p="Sponsorship Opportunities"
    +renderSponsorshipList(sponsorshipHeadline, sponsorshipList)

    p="Текст первой страницы"
    .deadlines-info
      .deadlines-info__content
        each textBlock in deadlinesInfoContent
          +renderHeadline2(textBlock.title)
          .deadlines-info__text
            +renderTextContentBlock(textBlock.textList)
      +renderDownloadFiles(downloadHeadline, downloadList)
