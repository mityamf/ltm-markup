extends ../base/layout

block variables
  - var title = "LK-Exhibitor Notifications"
  - var hasHeader = true
  - var hasFooter = true

block main
  include ../data/hotel-page-editing
  include ../data/support-contacts
  include ../data/notifications
  include ../data/account
  include ../data/account-events
  include ../data/hotel-photos

  main.container.container--no-padding
    .hotel-headline.hotel-headline--account-page
      a.account-hotel-info__link-hotel(href=accountHotelInfo.link)=accountHotelInfo.link
      .hotel-headline__wrapper
        h2.title--h2=hotelHeadline.title
        span=hotelHeadline.note
      +icon(hotelHeadline.logo, hotelHeadline.logoWidth, hotelHeadline.logoHeight)
    +renderHotelPhotos(hotelPhotos.photoList)
    +renderAccountHotelInfo(accountHotelInfo.text, accountHotelInfo.link, accountHotelInfo.buttonText)
    +renderEventsList(eventList.title, eventList.subtitle, eventList.hotelList)
    .account__contact-us
      .account__admin
        h3.title--h3=administrator.title
        .account__admin-wrapper
          button(class="account__contact-button" type="button")
            +icon("icon-write", 18, 24)
          img(src=administrator.src, width="103", height="103")
          .account__admin-info
            span.account__admin-name=administrator.name
            span.account__admin-name=administrator.lastName
            span.account__admin-position=administrator.position
        span.account__admin-text=administrator.text
      .account__notifications
        h3.title--h3=administrator.title
        +renderNotifications(notifications)
        button(class="btn btn--white btn--more btn--desktop" type="button") All Notifications
        button(class="btn btn--white btn--more btn--mobile" type="button") More
        a(href="#top", class="notifications__up-link", aria-label="Вернуться в начало")
          +icon("icon-arrow-up", 54, 54)
    +renderSupportContacts(contactsList)
