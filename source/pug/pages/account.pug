extends ../base/layout

block variables
  - var title = "LK-Exhibitor Notifications"
  - var hasHeader = true
  - var hasFooter = true

block main
  include ../data/hotel/hotel-page-editing
  include ../data/support-contacts
  include ../data/admin/account
  include ../data/admin/account-events
  include ../data/hotel/hotel-photos

  main.container.container--no-padding
    .hotel-headline.hotel-headline--account-page
      a.account-hotel-info__link-hotel(href=accountHotelInfo.link)=accountHotelInfo.link
      .hotel-headline__wrapper
        +renderHeadline2(hotelHeadline.title)
        span=hotelHeadline.note
      +icon(hotelHeadline.logo, hotelHeadline.logoWidth, hotelHeadline.logoHeight)
    +renderPhotos(hotelPhotos.photoList)
    +renderImageSlider(hotelPhotos.photoList)
    +renderAccountHotelInfo(accountHotelInfo.text, accountHotelInfo.link, accountHotelInfo.buttonText)
    +renderEventsList(eventList.title, eventList.subtitle, eventList.hotelList)

    .account__contact-us
      .account__admin
        +renderAccountAdmin(administrator.title, administrator.src, administrator.name, administrator.lastName, administrator.position, administrator.text)
      .account__notifications
        +renderHeadline3("Notifications")
        +renderNotifications(notifications)
        button(class="btn btn--white btn--more btn--desktop" type="button") All Notifications
        button(class="btn btn--white btn--more btn--mobile" type="button") More

    +renderSupportContacts(contactsList)
