extends ../base/layout

block variables
  - var title = "Hosted Buyers Guest List"
  - var hasHeader = true
  - var hasFooter = true
  - var currentPage = "Hosted Buyers Guest List"
  - var hasUpButton = true

block main
  include ../data/pages/admin-hosted-guests-d1
  include ../data/modal-colleague-admin

  main.container.container--no-padding
    .admin
      +renderAdminHeadline(adminHeadline.eventName, adminHeadline.eventPlace, adminHeadline.dates, adminHeadline.backLink)
      .hidden-sm
        +renderParticipantList(participantsHeadline, participantsInfo, participantsList, participantsText)
      .admin__control-wrapper
        +renderAdminTabs(adminTabs)
      +renderHeadline2("Hosted Buyers Guest List")
      +renderScheduleTabs(scheduleTabs)

      .hidden-sm
        .filters.filters--exhibitions
          +renderAlphabetFilter(alphabetFilter)
          +renderDropdownFilter(dropdownFilters)

      .visible-sm
        +renderMobileFilterButtons("Filters", "Clear all filters")

      +renderFilterTabs(filterTabs)
      +renderHostedGuestsList(adminHostedGuestsListTitles, adminHostedGuestsList)
      button.btn.btn--white.btn--more(type="button")="More"
    +renderSupportContacts(contactsList)

block modals
