extends ../base/layout

block data
  include ../data/news

block variables
  - var title = "Новости"
  - var hasHeader = true
  - var hasFooter = true
  - var currentPage = ""
  - var text = "THE LEADING LUXURY TRAVEL EXHIBITION IN EASTERN EUROPE, RUSSIA & CIS"
  - var desktopImage = "img/bg/bg-005-desktop.jpg"
  - var tabletImage = "img/bg/bg-001-tablet.jpg"
  - var mobileImage = "img/bg/bg-005-mobile.jpg"

block main

  main
    .container
      .news
        .news__title-container
          h2.news__title.title.title--h2 LTM News
          a.news__nav-button(href="#")
            img(src="img/svg/icon-back.svg", width="12", height="20")
            span Back
        ul.news__list
          each news in newsList
            li.news__item
              .news__image-container
                +img("content", news.image, "jpg", "222", "222", news.title)
              .news__content
                time.news__date(datetime=news.datetime) #{news.date}
                h3 #{news.title}
                p #{news.preview}
              a.news__button.news__button--open-news(href="newpage.html")
                img(src="img/svg/icon-arrow.svg", width="20", height="14")
                span.visually-hidden read more
        a.news__button.news__button--more(href="#") More News
