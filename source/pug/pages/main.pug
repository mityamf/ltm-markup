block main
  main
    .main-container
      +promo("The leading luxury travel exhibition in eastern europe, russia & cis", "Registration", "./img/bg/bg-home.png", "./img/bg/bg-home@2x.png", "1920", "534", "./img/bg/LTM_28_02_1942.png 1x, ./img/bg/LTM_28_02_1942@2x.png 2x", "promo__button", "promo__info")
      section.direction.direction-swiper
        .swiper-container.direction__swiper-block
          h2.visually-hidden List of available destinations
          ul.direction__list.swiper-wrapper
            li.swiper-slide
              +direction("Luxury Travel Mart Kyiv 2019 at the Intercontinental Kyiv, Ukraine", "24 September 2019", "Registration ending soon", "2019-09-24", "direction__status--ending")
            li.swiper-slide
              +direction("Luxury Travel Mart Almaty 2019 at The Ritz-Carlton, Almaty, Kazakhstan", "27 September 2019", "Available", "2019-09-27", "direction__status--available")
            li.swiper-slide
              +direction("Luxury Travel Mart Moscow 2019 at The Ritz-Carlton, Moscow, Russia", "1 October 2019", "Available", "2019-10-01", "direction__status--available")
            li.swiper-slide
              +direction("Luxury Travel Mart Moscow 2020 at Hyatt Regency Moscow, Russia", "27–28 February 2020", "Available", "2020-02-27", "direction__status--available")
            li.swiper-slide
              +direction("Luxury Travel Mart Almaty Spring 2020 at The Ritz-Carlton, Almaty, Kazakhstan", "3 March 2020", "Waiting list", "2020-03-03", "direction__status--waiting")
            li.swiper-slide
              +direction("Luxury Travel Mart Exchange Grand Hotel Europe, Saint-Petersburg, Russia", "20 June 2020", "Waiting list", "2020-06-20", "direction__status--waiting")

            li.swiper-slide
              +direction("Luxury Travel Mart Moscow 2019 at The Ritz-Carlton, Moscow, Russia", "1 October 2019", "Available", "2019-10-01", "direction__status--available")
            li.swiper-slide
              +direction("Luxury Travel Mart Moscow 2020 at Hyatt Regency Moscow, Russia", "27–28 February 2020", "Available", "2020-02-27", "direction__status--available")
            li.swiper-slide
              +direction("Luxury Travel Mart Almaty Spring 2020 at The Ritz-Carlton, Almaty, Kazakhstan", "3 March 2020", "Waiting list", "2020-03-03", "direction__status--waiting")
            li.swiper-slide
              +direction("Luxury Travel Mart Exchange Grand Hotel Europe, Saint-Petersburg, Russia", "20 June 2020", "Waiting list", "2020-06-20", "direction__status--waiting")
          button.direction__arrow.direction__arrow--right
            +icon("arrow-right", 11, 19)
          button.direction__arrow.direction__arrow--left
            +icon("arrow-left", 11, 19)

      +news-home
      +interaction
      +partners

block modals
  +modal("modal--gallery")
    +modal-gallery(modalImages)

