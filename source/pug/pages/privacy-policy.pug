extends ../base/layout

block data
  include ../data/privacy-policy

block variables
  - var title = "Политика конфиденциальности"
  - var hasHeader = true
  - var hasFooter = true
  - var currentPage = ""

block main

  +promo(promoBg.titleItem, null, promoBg.imgItem, promoBg.img2xItem, promoBg.widthItem, promoBg.heightItem, promoBg.imgSource, promoBg.classItem, promoBg.promoItem, true)
  main#top
    .container
      .privacy-policy
        +renderTitleHeadlineWithBackButton(privacyPolicy.title, "main.html")
        time.privacy-policy__date(datetime=privacyPolicy.datetime)= privacyPolicy.date
        .privacy-policy__wrapper
          p= privacyPolicy.text
          ul.privacy-policy__list
            each item in privacyPolicy.content
              li
                h3= item.question
                each paragraph in item.answer
                  p= paragraph
