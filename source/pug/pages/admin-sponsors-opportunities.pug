extends ../base/layout

block variables
  - var title = "Sponsorship Opportunities"
  - var hasHeader = true
  - var hasFooter = true
  - var currentPage = "Sponsorship Opportunities"

block main
  include ../data/pages/admin-sponsors-opportunities

  main.container.container--no-padding.container--admin
    .admin
      +renderAdminHeadline(adminHeadline.eventName, adminHeadline.eventPlace, adminHeadline.dates, adminHeadline.backLink)
      +renderParticipantList(participantsHeadline, participantsInfo, participantsList, participantsText)
      .admin__control-wrapper
        +renderAdminTabs(adminTabs)
      +renderSponsorshipList(sponsorshipHeadline, sponsorshipList)
    +renderSupportContacts(contactsList)
