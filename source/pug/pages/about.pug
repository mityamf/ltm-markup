extends ../base/layout

block variables
  - var title = "Об ивенте"
  - var hasHeader = true
  - var hasFooter = true
  - var text = "THE LEADING LUXURY TRAVEL EXHIBITION IN EASTERN EUROPE, RUSSIA & CIS"
  - var desktopImage = "img/bg/about-page-desktop.png"
  - var tabletImage = "img/bg/about-page-tablet.png"
  - var mobileImage = "img/bg/news-page-mobile.png"
  - var currentPage = "About LTM"

block main
  include ../data/about

  +renderTopBlock(text, desktopImage, tabletImage, mobileImage)

  main.container

    .about
      .about__content
        +renderHeadline2(aboutEvent.title)
        +renderTextContentBlock(aboutEvent.textList)
        button.btn.btn--white(type="button", aria-label="Показать больше")=buttonText

        +renderHeadline2(eventBlock.title)
        each event in eventBlock.eventList
          +renderHeadline3(event.subtitle)
          +renderTextContentBlock(event.textList)

      aside.about__aside
        +renderHeadline2(benefitsTitle)
        ul
          each benefit in benefits
            li
              +icon(benefit.src, benefit.width, benefit.height)
              p=benefit.text
